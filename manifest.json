{
    "manifest_version": 2,
    "name": "LinkedIn Job Details Extractor",
    "version": "1.0",
    "description": "Extracts the 'About the job' text from LinkedIn job pages",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/jobs/*"],
        "js": ["content.js"]
      }
    ]
  }
  